@model IList<ToListBannerDto>
@{
    ViewData["Title"] = "Index";
}

<h3>Banner</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Title</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BannerID</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="UpdateBanner" asp-controller="AdminBanner" asp-route-id="@item.BannerID" class="btn btn-info"><i class="fa-solid fa-pencil"></i></a></td>
            <td><a asp-action="DeleteBanner" asp-controller="AdminBanner" asp-route-id="@item.BannerID" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a></td>

        </tr>
    }
</table>

<a asp-action="CreateBanner" asp-asp-controller="AdminBanner" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i></a>

